@model List<BG_Application.CustomDTO.InquiryViewModel>
@{
    ViewBag.Title = "Inquiry";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="main-content">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Color Master</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover" id="color-master-table" style="width:100%;">
                                    <thead>
                                        <tr>
                                            <th>User</th>
                                            <th>Name</th>
                                            <th>Company Name</th>
                                            <th>Company Address</th>
                                            <th>Type</th>
                                            <th>Country</th>
                                            <th>State</th>
                                            <th>City</th>
                                            <th>Comments</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var C in Model)
                                        {
                                            <tr>
                                                <td>@C.UserName</td>
                                                <td>@C.InquiryName</td>
                                                <td>@C.CompanyName</td>
                                                <td>@C.CompanyAddress</td>
                                                <td>@C.Type</td>
                                                <td>@C.Country</td>
                                                <td>@C.State</td>
                                                <td>@C.City</td>
                                                <td>@C.Comments</td>
                                                <td>
                                                    @{ if (C.IsResolve == true)
                                                        {
                                                            <div class="badge badge-success badge-shadow">Resolved</div>
                                                        }
                                                        else
                                                        {
                                                            <div class="badge badge-danger badge-shadow">Pending</div>
                                                        }
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
