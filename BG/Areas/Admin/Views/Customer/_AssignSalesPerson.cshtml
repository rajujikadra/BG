@model List<BG_Application.CustomDTO.SalesPersons>
@{
    ViewBag.Title = "_AssignSalesPerson";
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="formModal">Asssign sales person to @ViewBag.UserName</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form class="">
                <input type="hidden" value="@ViewBag.CustomerID" id="CustomerEmailID"/>
                <div class="form-group">
                    <label>Sales person</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fas fa-user"></i>
                            </div>
                        </div>
                        @*<input type="text" class="form-control" placeholder="Email" name="email">*@
                        <select class="form-control">
                            <option value="">--Select Sales Person--</option>
                            @foreach (var i in Model)
                            {
                                <option value="@i.SalesPersonID">@i.SalesPersonName</option>
                            }
                        </select>
                    </div>
                </div>
                <button type="button" class="btn btn-info text-right m-t-15 waves-effect">Assign</button>
            </form>
        </div>
    </div>
</div>
