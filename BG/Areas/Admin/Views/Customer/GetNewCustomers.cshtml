@model List<BG_Application.CustomDTO.ApplicationUserViewModel>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div class="main-content">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            @if (Model.Count() > 0)
                            {
                                if (Model[0].Active == false)
                                {
                                    <h4>New Customers</h4>
                                }
                                else
                                {
                                    <h4>Register Customers</h4>
                                }
                            }
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover" id="new-customer-table" style="width:100%;">
                                    <thead>
                                        <tr>
                                            @if (Model.Count() > 0)
                                            {
                                                if (Model[0].Active != true)
                                                {
                                                    <th class="text-center">
                                                        <div class="custom-checkbox custom-checkbox-table custom-control">
                                                            <input type="checkbox" data-checkboxes="mygroup" data-checkbox-role="dad"
                                                                   class="custom-control-input" id="checkbox-all">
                                                            <label for="checkbox-all" class="custom-control-label">&nbsp;</label>
                                                        </div>
                                                    </th>
                                                }
                                            }
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Mobile</th>
                                            <th>City</th>
                                            <th>Company</th>
                                            <th>Company Address</th>
                                            <th>Company City</th>
                                            <th>Contact Person</th>
                                            <th>Reference</th>
                                            <th>Reference Mobile</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var U in Model)
                                        {
                                            <tr>
                                                @if (U.Active != true)
                                                {
                                                    <td class="p-0 text-center">
                                                        <div class="custom-checkbox custom-control">
                                                            <input type="checkbox" data-checkboxes="mygroup" class="custom-control-input"
                                                                   id="checkbox'@U.Id'">
                                                            <label for="checkbox'@U.Id'" class="custom-control-label">&nbsp;</label>
                                                        </div>
                                                    </td>
                                                }
                                                <td>@U.FirstName @U.LastName</td>
                                                <td>@U.Email</td>
                                                <td>@U.Mobile</td>
                                                <td>@U.UserCityName</td>
                                                <td>@U.CompanyName</td>
                                                <td>@U.CompanyAddress</td>
                                                <td>@U.CompanyCityName</td>
                                                <td>@U.ContactPerson</td>
                                                <td>@U.RefName</td>
                                                <td>@U.RefMobile</td>
                                                <td><a href="/admin/customer/@U.Id" class="btn btn-primary"><i class="fa fa-eye"></i> View</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
